---
import Container from "./Container.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
  <nav class="z-10 w-full absolute">
<Container containerWidth="max-w-6xl">
      <div
        class="flex flex-wrap items-center justify-between py-2 gap-6 md:py-4 md:gap-0 relative"
      >
        <input
          aria-hidden="true"
          type="checkbox"
          name="toggle_nav"
          id="toggle_nav"
          class="hidden peer"
          aria-label="Toggle navigation menu"
        />
        <div class="relative z-20 w-full flex justify-between lg:w-max md:px-0">
          <a href="/" aria-label="logo" class="flex space-x-2 items-center">
            <!--?xml version="1.0" encoding="UTF-8"?-->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-7 h-7 fill-black dark:fill-white"
              viewBox="0 0 1000 1000"
            >
              <g
                id="favicon"
                stroke="none"
                stroke-width="1"
                fill-rule="evenodd"
              >
                <g
                  transform="translate(100.000000, 100.000000)"
                  fill-rule="nonzero"
                  id="Rectangle"
                >
                  <rect x="160" y="0" width="160" height="800"></rect>
                  <rect x="480" y="0" width="160" height="800"></rect>
                  <polygon
                    transform="translate(400.000000, 240.000000) rotate(90.000000) translate(-400.000000, -240.000000) "
                    points="320 -160 480 -160 480 640 320 640"></polygon>
                  <polygon
                    transform="translate(400.000000, 560.000000) rotate(90.000000) translate(-400.000000, -560.000000) "
                    points="320 160 480 160 480 960 320 960"></polygon>
                </g>
              </g>
            </svg>
            <span class="text-2xl font-bold text-gray-900 dark:text-white"
              >feregri.no</span
            >
          </a>

          <div class="relative flex items-center lg:hidden max-h-10">
            <label
              role="button"
              for="toggle_nav"
              aria-label="Toggle navigation menu"
              id="hamburger"
              class="relative p-6 -mr-6"
            >
              <div
                aria-hidden="true"
                id="line"
                class="m-auto h-0.5 w-5 rounded bg-sky-900 dark:bg-gray-300 transition duration-300"
              >
              </div>
              <div
                aria-hidden="true"
                id="line2"
                class="m-auto mt-2 h-0.5 w-5 rounded bg-sky-900 dark:bg-gray-300 transition duration-300"
              >
              </div>
            </label>
          </div>
        </div>
        <div
          aria-hidden="true"
          class="fixed z-10 inset-0 h-screen w-screen bg-white/70 backdrop-blur-2xl origin-bottom scale-y-0 transition duration-500 peer-checked:origin-top peer-checked:scale-y-100 lg:hidden dark:bg-gray-900/70"
        >
        </div>
        <div
          class="flex-col z-20 flex-wrap gap-6 p-8 rounded-3xl border border-gray-100 bg-white shadow-2xl shadow-gray-600/10 justify-end w-full invisible opacity-0 translate-y-1 absolute top-full left-0 transition-all duration-300 scale-95 origin-top lg:relative lg:scale-100 lg:peer-checked:translate-y-0 lg:translate-y-0 lg:flex lg:flex-row lg:items-center lg:gap-0 lg:p-0 lg:bg-transparent lg:w-7/12 lg:visible lg:opacity-100 lg:border-none peer-checked:scale-100 peer-checked:opacity-100 peer-checked:visible lg:shadow-none dark:shadow-none dark:bg-gray-800 dark:border-gray-700"
        >
          <div
            class="text-gray-600 dark:text-gray-300 lg:pr-4 lg:w-auto w-full lg:pt-0"
          >
            <ul
              class="tracking-wide font-medium lg:text-sm flex-col flex lg:flex-row gap-6 lg:gap-0"
              role="navigation"
              aria-label="Main navigation"
            >
              <li>
                <a
                  href="/blog"
                  class="block md:px-4 transition hover:text-primary"
                >
                  <span>Blog</span>
                </a>
              </li>
              <li>
                <a
                  href="/bookshelf"
                  class="block md:px-4 transition hover:text-primary"
                >
                  <span>Book recomendations</span>
                </a>
              </li>
              <li>
                <a
                  href="/projects"
                  class="block md:px-4 transition hover:text-primary"
                >
                  <span>Projects</span>
                </a>
              </li>
              <li>
                <a
                  href="/collection"
                  class="block md:px-4 transition hover:text-primary"
                >
                  <span>Collections</span>
                </a>
              </li>
            </ul>
          </div>
          <!-- Theme Toggle -->
          <div class="flex items-center lg:ml-4 mt-4 lg:mt-0">
            <ThemeToggle />
          </div>
          <!-- Call to action button -->   
          <!--
          <div class="mt-12 lg:mt-0">
            <a
              href="#"
              class="relative flex h-9 w-full items-center justify-center px-4 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
            >
              <span class="relative text-sm font-semibold text-white"
                >Subscribe</span
              >
            </a>
          </div>
          -->
        </div>
      </div>
    </Container>
  </nav>
</header>

<style>
  #toggle_nav:checked ~ div #hamburger #line {
    @apply rotate-45 translate-y-1.5;
  }

  #toggle_nav:checked ~ div #hamburger #line2 {
    @apply -rotate-45 -translate-y-1;
  }
</style>
