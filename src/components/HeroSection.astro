---
import Container from "./Container.astro";
import { SOCIALS, BIOGRAPHY, SocialNetwork } from "../consts";
---

<div class="relative" id="home">
  <div
    aria-hidden="true"
    class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
  >
    <div
      class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"
    >
    </div>
    <div
      class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"
    >
    </div>
  </div>
  <Container>
    <div class="relative pt-36 ml-auto">
      <div class="lg:w-2/3 text-center mx-auto">
        <h1
          class="text-gray-900 dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl"
        >
          Antonio <span class="text-primary dark:text-white">Feregrino</span>
        </h1>
        <p class="mt-6 text-gray-700 dark:text-gray-300">{BIOGRAPHY}</p>
        {
          SOCIALS.map((social: SocialNetwork) => (
            <a href={social.url} class="inline-block mt-6 mx-2">
              <i
                class={`fab fa-${social.icon} text-3xl text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors duration-300`}
              />
              <span class="sr-only">{social.name}</span>
            </a>
          ))
        }
      </div>
    </div>
  </Container>
</div>
