---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';
import { getCollection } from 'astro:content';

const galleries = await getCollection('collection');

// Sort galleries by priority, then by date
const sortedGalleries = galleries.sort((a: any, b: any) => {
	const priorityDiff = b.data.priority - a.data.priority;
	if (priorityDiff !== 0) return priorityDiff;
	
	// If priorities are equal, sort by date (newer first)
	if (a.data.date && b.data.date) {
		return b.data.date.valueOf() - a.data.date.valueOf();
	}
	
	// If no dates, maintain original order
	return 0;
});
---

<Layout 
	title="Photo Gallery - Photography Collections | feregri.no" 
	description="Explore my photography collections showcasing moments and places that have captured my attention. High-quality photo galleries with detailed captions and professional photography."
	language="en"
>
	<main class="pt-20 pb-20">
		<Container containerWidth="max-w-6xl">
			<div class="text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
					Photo Gallery
				</h1>
				<p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
					A collection of my photography work, showcasing moments and places that have captured my attention.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{sortedGalleries.map((gallery: any) => (
					<a 
						href={`/collection/${gallery.slug}`}
						class="group block bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
					>
						<div class="relative overflow-hidden">
							<img 
								src={gallery.data.thumbnail} 
								alt={gallery.data.title}
								class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
								loading="lazy"
							/>
							<div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
						</div>
						<div class="p-6">
							<h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-primary transition-colors">
								{gallery.data.title}
							</h2>
							<p class="text-gray-600 dark:text-gray-300 text-sm mb-3 line-clamp-2">
								{gallery.data.description}
							</p>
							<div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
								<span>{gallery.data.images.length} {gallery.data.images.length === 1 ? 'photo' : 'photos'}</span>
								{gallery.data.category && (
									<span class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded-full text-xs">
										{gallery.data.category}
									</span>
								)}
							</div>
						</div>
					</a>
				))}
			</div>

			{sortedGalleries.length === 0 && (
				<div class="text-center py-16">
					<div class="text-gray-400 dark:text-gray-600 mb-4">
						<svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No galleries yet</h3>
					<p class="text-gray-600 dark:text-gray-300">Check back soon for photo collections!</p>
				</div>
			)}
		</Container>
	</main>
</Layout>

<!-- JSON-LD Structured Data for Gallery Index -->
<script type="application/ld+json" set:html={JSON.stringify({
	"@context": "https://schema.org",
	"@type": "CollectionPage",
	"name": "Photo Gallery",
	"description": "Explore my photography collections showcasing moments and places that have captured my attention. High-quality photo galleries with detailed captions and professional photography.",
	"url": "https://feregri.no/collection",
	"mainEntity": {
		"@type": "ItemList",
		"name": "Photography Collections",
		"description": "A curated collection of photography galleries",
		"numberOfItems": sortedGalleries.length,
		"itemListElement": sortedGalleries.map((gallery, index) => ({
			"@type": "ListItem",
			"position": index + 1,
			"item": {
				"@type": "ImageGallery",
				"name": gallery.data.title,
				"description": gallery.data.description,
				"url": `https://feregri.no/collection/${gallery.slug}`,
				"image": gallery.data.thumbnail,
				"datePublished": gallery.data.date?.toISOString(),
				"author": {
					"@type": "Person",
					"name": "Antonio Feregrino"
				}
			}
		}))
	},
	"author": {
		"@type": "Person",
		"name": "Antonio Feregrino",
		"url": "https://feregri.no"
	},
	"publisher": {
		"@type": "Organization",
		"name": "feregri.no",
		"url": "https://feregri.no"
	}
})} />

<style>
	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>
